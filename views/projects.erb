<h1><%= @project.title %></h1>

<p><a href = "/projects/<%= @project.id %>/edit">Edit Project</a></p>

<% @volunteers_project.each do |volunteer| %>
<p><a href ="/projects/<%= @project.id %>/edit/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></p>
<% end %>

<h2>Add Volunteer:</h2>
<form action = "/projects/<%= @project.id %>/edit/volunteers" method ="post">
  <input type ="text" name="name">
  <input type ="hidden" name="project_id" value ="<%= @project.id %>">
  <button type ="submit">New Volunteer</button>
</form>
